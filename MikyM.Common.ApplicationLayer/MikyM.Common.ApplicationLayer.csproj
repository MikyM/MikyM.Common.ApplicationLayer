<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>MikyM.Common.ApplicationLayer</PackageId>
    <Version>1.0.5</Version>
    <Authors>Krzysztof Kupisz</Authors>
    <PackageDescription>Application layer for DDD architecture utilizing MikyM.Common.DataAccessLayer package.</PackageDescription>
    <RepositoryUrl>https://github.com/MikyM/MikyM.Common.ApplicationLayer</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="6.3.0" />
    <PackageReference Include="AutoMapper.Contrib.Autofac.DependencyInjection" Version="6.0.1" />
    <PackageReference Include="AutoMapper.Extensions.ExpressionMapping" Version="5.0.2" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
    <PackageReference Include="MikyM.CommandHandlers" Version="1.0.0" />
    <PackageReference Include="MikyM.Common.DataAccessLayer" Version="1.1.7" />
  </ItemGroup>

</Project>
